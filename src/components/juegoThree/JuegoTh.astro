    <style>
      /* Animaciones especiales para nota perfecta */
      @keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
      }
      
      @keyframes goldShine {
        0% { box-shadow: 0 0 20px rgba(255, 215, 0, 0.5); }
        50% { box-shadow: 0 0 40px rgba(255, 215, 0, 0.8), 0 0 60px rgba(255, 215, 0, 0.4); }
        100% { box-shadow: 0 0 20px rgba(255, 215, 0, 0.5); }
      }
      
      @keyframes blueShine {
        0% { box-shadow: 0 0 15px rgba(68, 199, 244, 0.4); }
        50% { box-shadow: 0 0 25px rgba(68, 199, 244, 0.6), 0 0 35px rgba(68, 199, 244, 0.3); }
        100% { box-shadow: 0 0 15px rgba(68, 199, 244, 0.4); }
      }
      
      @keyframes orangeShine {
        0% { box-shadow: 0 0 15px rgba(255, 165, 0, 0.4); }
        50% { box-shadow: 0 0 25px rgba(255, 165, 0, 0.6), 0 0 35px rgba(255, 165, 0, 0.3); }
        100% { box-shadow: 0 0 15px rgba(255, 165, 0, 0.4); }
      }
      
      @keyframes redShine {
        0% { box-shadow: 0 0 15px rgba(255, 99, 99, 0.4); }
        50% { box-shadow: 0 0 25px rgba(255, 99, 99, 0.6), 0 0 35px rgba(255, 99, 99, 0.3); }
        100% { box-shadow: 0 0 15px rgba(255, 99, 99, 0.4); }
      }
      
      .perfect-score {
        animation: goldShine 2s ease-in-out infinite !important;
      }
      
      .good-score {
        animation: blueShine 2s ease-in-out infinite !important;
      }
      
      .average-score {
        animation: orangeShine 2s ease-in-out infinite !important;
      }
      
      .low-score {
        animation: redShine 2s ease-in-out infinite !important;
      }
      
      .perfect-score h2 {
        animation: pulse 1.5s ease-in-out infinite;
        color: #FFD700 !important;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
      }
      
      /* Estilos para botones con hover */
      .modal-button {
        transition: all 0.3s ease !important;
      }
      
      .modal-button:hover {
        transform: scale(1.05) !important;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3) !important;
      }
      
      .perfect-button:hover {
        background: linear-gradient(45deg, #FFD700, #FFA500, #FF6B6B) !important;
        box-shadow: 0 8px 20px rgba(255, 215, 0, 0.5) !important;
      }
      
      .normal-button:hover {
        background-color: #56a3a0 !important;
        box-shadow: 0 5px 15px rgba(104, 195, 192, 0.4) !important;
      }
    </style>
    <script is:inline type="text/javascript" src="/js/utils/TweenMax.min.js"></script>
